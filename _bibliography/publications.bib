	@article{MURPHY2019487,
		title = {Modes of operation: A topographic neural gradient supporting stimulus dependent and independent cognition},
		journal = {NeuroImage},
		volume = {186},
		pages = {487--496},
		year = {2019},
		doi = {https://doi.org/10.1016/j.neuroimage.2018.11.009},
