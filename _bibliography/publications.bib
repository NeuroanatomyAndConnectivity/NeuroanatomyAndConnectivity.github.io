	Keywords = {*amygdala{\;} *conflict{\;} *emotion control{\;} *fMRI{\;} *free viewing{\;} *functional connectivity{\;} *inferior parietal lobule{\;} *superior temporal sulcus},
	Month = {Jun},
	Number = {6},
	Pages = {2234--2246},
	Pmid = {26991156},
	Rn = {S88TT14065 (Oxygen)},
	Title = {The neural networks of subjectively evaluated emotional conflicts.},
